# ========================================
# Ghost Feedback System - Backend API
# Environment Variables Template
# ========================================

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Connection
# Local: mongodb://localhost:27017/ghost_feedback
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/ghost_feedback
MONGODB_URI=mongodb://localhost:27017/ghost_feedback

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRES_IN=7d

# CORS Configuration
# Development: http://localhost:3000
# Production: https://your-frontend-domain.vercel.app
CORS_ORIGIN=http://localhost:3000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Password Hashing
BCRYPT_ROUNDS=12

# Admin Default Credentials (Change in production)
DEFAULT_ADMIN_EMAIL=admin@company.com
DEFAULT_ADMIN_PASSWORD=admin123
DEFAULT_ADMIN_ROLE=COO
DEFAULT_ADMIN_FIRST_NAME=Admin
DEFAULT_ADMIN_LAST_NAME=User

# Security Headers
HELMET_ENABLED=true
CORS_ENABLED=true
RATE_LIMIT_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_TO_FILE=false
LOG_FILE_PATH=./logs/app.log

# API Versioning
API_VERSION=v1
API_PREFIX=/api

# Database Options
MONGODB_OPTIONS_AUTO_INDEX=true
MONGODB_OPTIONS_MAX_POOL_SIZE=10
MONGODB_OPTIONS_SERVER_SELECTION_TIMEOUT_MS=5000

# Session Management
SESSION_SECRET=your_session_secret_here
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_MAX_AGE=86400000

# File Upload (if needed in future)
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif
UPLOAD_PATH=./uploads

# Email Configuration (if needed in future)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=noreply@yourcompany.com

# Monitoring & Analytics
ENABLE_MONITORING=false
MONITORING_INTERVAL=300000
ENABLE_ANALYTICS=false

# Development Only (remove in production)
DEBUG=true
VERBOSE_LOGGING=false
SHOW_ERROR_DETAILS=true
